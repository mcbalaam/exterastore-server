generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id             String  @id @default(uuid())
  username       String  @unique
  email          String
  title          String?
  timeoutDue     Int?
  profilePicture String
  isSupporter    Boolean
}

model exteraPlugin {
  id          String          @id @default(uuid())
  name        String
  description String?
  releases    pluginRelease[]
}

model pluginRelease {
  id           String       @id @default(uuid())
  releaseNotes String?
  file         String
  plugin       exteraPlugin @relation(fields: [pluginId], references: [id])
  pluginId     String
}

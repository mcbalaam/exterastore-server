generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id             String   @id @default(uuid())
  username       String   @unique
  email          String
  title          String?
  timeoutDue     Int?
  profilePicture String
  isSupporter    Boolean
  passwordHash   String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  preferences    Json?
  status         String   @default("active")
}

model exteraPlugin {
  id             String          @id @default(uuid())
  name           String
  description    String?
  forkOriginId   String?
  stars          String[]
  reactions      Json            @default("{}")
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  targetPlatform String[]
  tags           String[]
}

model pluginRelease {
  id           String       @id @default(uuid())
  releaseNotes String?
  file         String
  pluginId     String
  reactions    Json         @default("{}")
  downloads    Int
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  releaseHash  String       @unique
}

model pluginStars {
  userId   String @id
  pluginId String
}
